{
    "manifest_version": 3,
    "name": "Twitch Ad Detector",
    "version": "1.0",
    "description": "Detects when an Ad appears and mutes the stream.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "content.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.twitch.tv/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
