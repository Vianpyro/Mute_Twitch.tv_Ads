{
    "manifest_version": 3,
    "name": "Twitch Ad Detector",
    "version": "1.0.2",
    "description": "Detects when an Ad appears and mutes the stream.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.twitch.tv/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "developer": {
        "name": "Vianney Veremme",
        "url": "https://github.com/Vianpyro/Mute_Twitch.tv_Ads"
    }
}
